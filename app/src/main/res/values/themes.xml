<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Agent_app_android" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q"> false </item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Using the preference screen style in the app -->
        <item name="preferenceTheme">@style/PrefsTheme</item>
    </style>



<!--    Settings screen style-->
    <style name="PrefsTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="titleMargin">0dp</item>
        <item name="font">@font/br_sonoma_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:layout">@layout/fragment_settings</item>

    </style>

<!--    Theme for SplashScreen-->

    <!--    Theme for on-boarding screen-->

    <!--    Theme for onboarding progressbar-->
    <style name="CircularDeterminateProgressBar" >
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/button_onboarding_indicator</item>
    </style>

    <!--    Theme for onboarding progressbar-->
    <style name="ProfileProgressBar" >
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/profile_image_bg</item>
    </style>

<!--    Theme for dashboard progressbar-->
    <style name="DashBoardProgressBar" >
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/profile_image_bg</item>
    </style>


<!--Theme for bottom navigation view text-->
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.TextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView.TextAppearance</item>
    </style>


<!--Style for bottom navigation-->
    <style name="BottomNavigationView.TextAppearance"  parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/br_sonoma_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>


<!--    Style for custom alert dialog-->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowMinWidthMajor">0dp</item>
        <item name="windowMinWidthMinor">0dp</item>
    </style>


<!--    bottom dialog animation-->
    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>